#:kivy 1.11.0
# File name: model/FileExtractorMenu.py
#:import FileExtractorMenu frontur_gui.model.FileExtractorMenu.FileExtractorMenu
#:include frontur_gui/view/FileChooserWidget.kv

<FileExtractorMenu>:
    id: menu_seleccion
    container: container
    ScrollView:
        StackLayout:
            id: container
            padding: 10
            spacing: 5
            size_hint: 1, None
            height: self.minimum_height
            orientation: 'lr-tb'
            Label:
                text: '[color=#3c4146][b]Codigo de aeropuerto[/b]:[/color]'
                text_size: self.width, None
                size_hint: 1, None
                height: self.texture_size[1]
                halign: 'left'
                markup: True
                size: self.texture_size
            TextInput:
                id: text_input
                size_hint_y: None
                size_hint_x: None
                height: 30
                multiline: False
                keyword: 'airport'
            FileManagerLoad:
                id: frontur
                keyword: 'FRONTUR_FILE_PATH'
            Label:
                text: "[color=#3c4146][b]Archivo FRONTUR[/b]\n - Descripcion:Ruta del archivo con la informacion sobre los vuelos formato csv o excel.[/color]"
                size_hint: (None, None)
                halign: 'left'
                markup: True
                size: self.texture_size
            FileManagerLoad:
                id: available_days
                keyword: 'DAYS_FILE_PATH'
            Label:
                text: '[color=#3c4146][b]Dias Disponibles[/b]\n - Descripcion:Ruta del archivo json con los dias disponibles.[/color]'
                size_hint: (None, None)
                halign: 'left'
                markup: True
                size: self.texture_size
            FileManagerLoad:
                id: aliases
                keyword: 'SUBSTITUTIONS_FILE_PATH'
            Label:
                text: '[color=#3c4146][b]Fichero de aliases[/b]\n - Descripcion:Ruta del archivo con susticiones. - Opcional[/color]'
                size_hint: (None, None)
                halign: 'left'
                markup: True
                size: self.texture_size
            FileManagerLoad:
                id: planes
                keyword: 'PLANES_DATA_FILE_PATH'
            Label:
                text: '[color=#3c4146][b]Fichero de aviones[/b]\n - Descripcion:Ruta del archivo con informacion sobre los modelos de avion.[/color]'
                size_hint: (None, None)
                halign: 'left'
                markup: True
                size: self.texture_size